{
  "compilerOptions": {
    "allowJs": false,
    "allowUnreachableCode": false,
    "target": "es5",
    "module": "esnext",
    "lib": ["es6", "es2016", "es2017"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "removeComments": true,
    "outDir": "lib/esm",
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "__tests"]
}
